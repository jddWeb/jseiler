########################################################
# Page.tsconfig – Hauptkonfiguration für Backend (TYPO3 13.4)
# Lädt BackendLayouts modular aus separaten Dateien
########################################################

# -------------------------------------------------------
# 1. Backend Layouts importieren
# -------------------------------------------------------
@import 'EXT:jssitepackage/Configuration/TsConfig/Page/BackendLayouts/MainTemplate.tsconfig'
@import 'EXT:jssitepackage/Configuration/TsConfig/Page/BackendLayouts/SubmainTemplate.tsconfig'
@import 'EXT:jssitepackage/Configuration/TsConfig/Page/BackendLayouts/TerminTemplate.tsconfig'

# -------------------------------------------------------
# 2. Standard Backend Layout für neue Seiten
# -------------------------------------------------------
TCAdefaults.pages.backend_layout = jssitepackage__MainTemplate
TCAdefaults.pages.backend_layout_next_level = jssitepackage__MainTemplate

# -------------------------------------------------------
# 3. Allgemeine Backend-Einstellungen
# -------------------------------------------------------
TCEFORM {
  tt_content {
    # Entferne alte Inhaltselemente
    CType.removeItems = textpic, image
  }
}

mod {
  web_list {
    # Sinnvolle Spalten im Listenmodul
    table.tt_content.displayFields = CType, header, hidden, starttime, endtime
  }

  SHARED {
    defaultLanguageFlag = de
    defaultLanguageLabel = Deutsch
  }
}
